<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.SwitchCompat
        android:layout_marginTop="25dp"
        android:id="@+id/test_switch_1"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="Switch 1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.SwitchCompat

        android:id="@+id/test_switch_2"
        android:layout_width="150dp"
        android:layout_height="25dp"
        android:text="Switch 2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_switch_1"
        tools:ignore="HardcodedText" />

    <RadioGroup
        android:id="@+id/radio_group_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/test_switch_2">


        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radio_1"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginTop="50dp"
            android:checked="true"
            android:text="Radio 1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/test_switch_2" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radio_2"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:text="Radio 2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radio_1" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/radio_3"
            android:layout_width="150dp"
            android:layout_height="25dp"
            android:layout_marginTop="8dp"
            android:text="Radio 3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radio_2" />

    </RadioGroup>

    <CheckBox
        android:layout_marginTop="22dp"
        android:id="@+id/checkbox_1"
        android:text="Checkbox 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_group_1"
        tools:ignore="HardcodedText" />

    <CheckBox
        android:layout_marginTop="12dp"
        android:id="@+id/checkbox_2"
        android:text="Checkbox 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_1"
        tools:ignore="HardcodedText" />


</androidx.constraintlayout.widget.ConstraintLayout>